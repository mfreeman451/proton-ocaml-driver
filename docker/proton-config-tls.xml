<?xml version="1.0"?>
<proton>
    <logger>
        <level>error</level>
        <log>/var/log/proton-server/proton-server.log</log>
        <errorlog>/var/log/proton-server/proton-server.err.log</errorlog>
        <size>1000M</size>
        <count>10</count>
        <console>1</console>
    </logger>

    <http_port>8123</http_port>
    <tcp_port>8463</tcp_port>
    
    <!-- TLS ports -->
    <https_port>8443</https_port>
    <tcp_port_secure>9440</tcp_port_secure>
    
    <!-- TLS configuration for secure connections -->
    <openSSL>
        <server>
            <!-- Certificate and key for server -->
            <certificateFile>/etc/proton-server/certs/server.pem</certificateFile>
            <privateKeyFile>/etc/proton-server/certs/server-key.pem</privateKeyFile>
            
            <!-- CA certificate for verifying client certificates (mTLS) -->
            <caConfig>/etc/proton-server/certs/ca.pem</caConfig>
            
            <!-- DH parameters -->
            <dhParamsFile>/etc/proton-server/certs/dhparam.pem</dhParamsFile>
            
            <!-- Require client certificate verification for mTLS -->
            <verificationMode>strict</verificationMode>
            
            <!-- TLS version configuration -->
            <disableProtocols>sslv2,sslv3,tlsv1,tlsv1_1</disableProtocols>
            
            <!-- Cipher suite configuration -->
            <preferServerCiphers>true</preferServerCiphers>
            <cipherList>ECDHE+AESGCM:ECDHE+AES256:!aNULL:!MD5:!DSS</cipherList>
            
            <!-- Load system CA certificates -->
            <loadDefaultCAFile>false</loadDefaultCAFile>
        </server>
        
        <!-- Client configuration for connecting to other services -->
        <client>
            <loadDefaultCAFile>false</loadDefaultCAFile>
            <caConfig>/etc/proton-server/certs/ca.pem</caConfig>
            <certificateFile>/etc/proton-server/certs/client.pem</certificateFile>
            <privateKeyFile>/etc/proton-server/certs/client-key.pem</privateKeyFile>
            <verificationMode>relaxed</verificationMode>
            <invalidCertificateHandler>
                <name>RejectCertificateHandler</name>
            </invalidCertificateHandler>
        </client>
    </openSSL>

    <listen_host>0.0.0.0</listen_host>
    
    <max_connections>4096</max_connections>
    <keep_alive_timeout>3</keep_alive_timeout>
    <max_concurrent_queries>100</max_concurrent_queries>

    <uncompressed_cache_size>8589934592</uncompressed_cache_size>
    <mark_cache_size>5368709120</mark_cache_size>

    <path>/var/lib/proton/</path>
    <tmp_path>/var/lib/proton/tmp/</tmp_path>
    <user_files_path>/var/lib/proton/user_files/</user_files_path>
    <format_schema_path>/var/lib/proton/format_schemas/</format_schema_path>

    <users_config>users.xml</users_config>
    <default_profile>default</default_profile>
    <default_database>default</default_database>

    <timezone>UTC</timezone>
    
    <remote_servers incl="proton_remote_servers" />
    <zookeeper incl="zookeeper-servers" optional="true" />
    <macros incl="macros" optional="true" />
    
    <builtin_dictionaries_reload_interval>3600</builtin_dictionaries_reload_interval>
    <max_session_timeout>3600</max_session_timeout>
    <default_session_timeout>60</default_session_timeout>
    
    <query_log>
        <database>system</database>
        <table>query_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_log>

    <distributed_ddl>
        <path>/proton/task_queue/ddl</path>
    </distributed_ddl>
</proton>